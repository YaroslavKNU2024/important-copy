@model IEnumerable<VirusAppFinal.Variant>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VariantName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VariantOrigin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VariantDateDiscovered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Virus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VariantName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VariantOrigin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VariantDateDiscovered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Virus.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
