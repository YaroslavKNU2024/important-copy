@model VirusAppFinal.Variant

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Variant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="VariantName" class="control-label"></label>
                <input asp-for="VariantName" class="form-control" />
                <span asp-validation-for="VariantName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VariantOrigin" class="control-label"></label>
                <input asp-for="VariantOrigin" class="form-control" />
                <span asp-validation-for="VariantOrigin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VariantDateDiscovered" class="control-label"></label>
                <input asp-for="VariantDateDiscovered" class="form-control" />
                <span asp-validation-for="VariantDateDiscovered" class="text-danger"></span>
            </div>
            @if (@ViewBag.VirusId != null)
            {@if (@ViewBag.VirusId.GetType().BaseType == typeof(Microsoft.AspNetCore.Mvc.Rendering.MultiSelectList))
                {
                    <div class="form-group">
                        <label asp-for="VirusId" class="control-label"></label>
                        <select asp-for="VirusId" class="form-control" asp-items="ViewBag.VirusId"></select>
                    </div>
                }

            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
